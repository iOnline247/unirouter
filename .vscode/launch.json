  "version": "0.2.0",
  "configurations": [
    {
      "type": "node",
      "request": "launch",
      "name": "Debug File",
      "program": "${workspaceFolder}/dist/index.js",
      // "runtimeArgs": ["--harmony"], //"-r", "esm"],
      "env": {
        "PORT": "3001"
      },
      "sourceMaps": true,
      "smartStep": true,
      "skipFiles": [
        "${workspaceFolder}/node_modules/**/*.js",
        "<node_internals>/**/*.js"
      ],
      "autoAttachChildProcesses": true
    }
  ]
}
